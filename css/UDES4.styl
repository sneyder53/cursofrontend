gris_oscuro=#444
azul=#0000FF
naranja=#FF8000
blanco=#FFFFFF
body
	background #000000
	color blanco
	font-family Arial
	font-size 16px
	-webkit-transition font-size 1s
	-moz-transition font-size 1s
	-ms-transition font-size 1s
	-o-transition font-size 1s
	transition font-size 1s

header
	background #FFFF00
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color gris_oscuro
	padding 0.5em
	border-radius 1em
	position relative 
	.logo
		border-right 1px solid azul
		float left
		width 60px
		img
			width 50px

	.titular
		margin 0 80px 0 70px

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			img
				border-radius 50%
				width 100px




nav
	background azul
	border-left 15px solid white
	position relative
	.menu
		height 40px
		margin 0
		padding 0
		li
			display inline-block
			a 
				color white
				display block 
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				&:hover
					background rgba(naranja,0.1)
	color #000000
	border-radius 1em


section
	background #FF0000
	color blanco
	border-radius 1em
	.posts
		padding 0.5em
		.post 
			background blanco
			border-radius 0 0 0.5em 0.5em
			box-shadow 2px 2px 10px rgba(black, 0.5)
			color gris_oscuro
			margin-botton 0.5em
			.imagen
				float left
				img
					height 160px
					vertical-align top
					width 120px
					border-radius 1em
			.detalle
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0
				.titulo
					color gris_oscuro
					font-size 1.1em
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0


footer
	background  #FF0000
	padding 1em 0
	text-align center
	border-radius 1em
	